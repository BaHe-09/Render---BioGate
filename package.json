    "lint": "eslint . --ext .ts,.tsx", // Opcional: si usas ESLint
    "type-check": "tsc --noEmit" // Verificación de tipos
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
