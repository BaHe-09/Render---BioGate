{
  "name": "backend-neon",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "tsc && cp -r src/views build/views || true", // Compila TypeScript y copia recursos
    "start": "node build/server.js", // Punto de entrada en producción
